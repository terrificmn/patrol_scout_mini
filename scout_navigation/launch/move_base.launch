<launch>
  <!-- Arguments -->
  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="/t265/odom/sample1" />  
  <!-- 이거는 scout_map런치파일 실행시에 실행되는 노드에서 sample1을 만들어서 다시 퍼블리시함 -->
  <arg name="move_forward_only" default="false"/>

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <rosparam file="$(find scout_navigation)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find scout_navigation)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find scout_navigation)/param/local_costmap_params.yaml" command="load" /> ok
    <rosparam file="$(find scout_navigation)/param/global_costmap_params.yaml" command="load" /> ok
    <rosparam file="$(find scout_navigation)/param/move_base_params.yaml" command="load" /> 완
    <rosparam file="$(find scout_navigation)/param/dwa_local_planner_params.yaml" command="load" /> 완
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
  </node>
</launch>
